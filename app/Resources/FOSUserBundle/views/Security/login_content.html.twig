{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"
               required="required" />
    </div>

    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" class="form-control" id="password" name="_password"
               required="required" />
    </div>

    <div class="form-check checkbox mb-3">
        <input type="checkbox" id="remember_me" class="form-check-input" name="_remember_me" value="on" />
        <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit"
           name="_submit" value="{{ 'security.login.submit'|trans }}" />


    <div class="text-center">
        <a href="#" id="reset">Forgot username or password?</a>
    </div>
</form>

